datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String @id @default(cuid())
  email        String @unique
  passwordHash String
  role         Role   @default(REGULAR)

  firstName   String
  lastName    String
  phoneNumber String?
  city        String?
  country     String?
  linkedinUrl String?

  currentTitle String?
  skills       Json?
  languages    Json?
  education    Json?
  experience   Json?

  isVerified Boolean  @default(false)
  joinedAt   DateTime @default(now())

  // Relations
  documents Document[]
  versions  DocumentVersion[] @relation("UserVersions")
}

model Template {
  id        String   @id @default(cuid())
  name      String
  settings  Json?
  createdAt DateTime @default(now())

  // Relations
  documents Document[]
}

model Document {
  id               String   @id @default(cuid())
  userId           String
  templateId       String?
  title            String?
  docType          String?
  visibility       String   @default("private")
  currentVersionId String?  @unique
  createdAt        DateTime @default(now())

  // Relations
  user           User              @relation(fields: [userId], references: [id])
  template       Template?         @relation(fields: [templateId], references: [id])
  versions       DocumentVersion[]
  currentVersion DocumentVersion?  @relation("CurrentVersion", fields: [currentVersionId], references: [id])
}

model DocumentVersion {
  id         String   @id @default(cuid())
  documentId String
  version    Int
  content    Json
  createdBy  String
  createdAt  DateTime @default(now())

  // Relations
  document      Document  @relation(fields: [documentId], references: [id])
  createdByUser User      @relation("UserVersions", fields: [createdBy], references: [id])
  currentFor    Document? @relation("CurrentVersion")
}

enum Role {
  REGULAR
  ADMIN
}